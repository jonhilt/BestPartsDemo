<button @onclick="OnClick"
        class="px-4 py-2 rounded-lg transition-colors flex items-center gap-2 @(active ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")">
    <span>@ChildContent</span>
    @if (active)
    {
        <span>@(IsDescending.GetValueOrDefault() ? "↓" : "↑")</span>
    }
</button>

@code {

    [Parameter]
    public EventCallback OnClick { get; set; }
    
    [Parameter]
    public bool active { get; set; }
    
    [Parameter]
    public bool? IsDescending { get; set; }
    
    [Parameter] public RenderFragment ChildContent { get; set; }

}