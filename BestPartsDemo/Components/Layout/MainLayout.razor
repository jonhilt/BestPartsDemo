@inherits LayoutComponentBase

<div class="flex">
    <section class="flex flex-col space-y-1 p-2">
        <NavLink class="p-2 border rounded-md bg-indigo [&.active]:bg-indigo-600 [&.active]:!text-white" href="/" Match="NavLinkMatch.All">Home</NavLink>
        <NavLink class="p-2 border rounded-md bg-indigo [&.active]:bg-indigo-600 [&.active]:!text-white" href="/contacts/all">All Contacts</NavLink>
        
        <NavLink class="p-2 border rounded-md bg-indigo [&.active]:bg-indigo-600" href="/nopagehere">Trigger Not Found</NavLink>
    </section>
    <main class>
        <article class="px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>