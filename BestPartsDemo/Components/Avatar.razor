<div class="@Size bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white text-xl font-semibold">
    @GetInitials()
</div>

@code {
    [Parameter, EditorRequired]
    public string Name { get; set; }

    [Parameter]
    public string Size { get; set; } = "w-16 h-16";

    [Parameter]
    public string TextSize { get; set; } = "text-xl";

    private string GetInitials()
    {
        var names = Name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
        {
            return $"{names[0][0]}{names[^1][0]}".ToUpper();
        }
        return names.Length > 0 ? names[0][0].ToString().ToUpper() : "?";
    }
}